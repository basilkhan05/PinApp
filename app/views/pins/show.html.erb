<%= link_to 'Back', pins_path %>

<div class="row">
<div class="col-md-offset-3 col-md-6">
	<div class="panel panel-default bigbox">
	<div class="panel-heading center">
	<%= image_tag @pin.image.url(:medium) %>
	</div>
		<div class="panel-body">
		<h1 class="center">
		  
		  <%= @pin.description %>
		</h1>
		<p class="center">Pinned by <%= @pin.user.email if @pin.user %></p>
	</div>
	<% if user_signed_in? %>
	<%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit'), edit_pin_path(@pin) %> 
	<% end %>
	</div>

</div>   
</div>

