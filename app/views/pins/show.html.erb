<div class="panel-body">
<div class="form-group">
<%= link_to '< Back', pins_path, class: "btn btn-primary" %>
</div>
</div>

<div class="row">
<div class="col-md-6">
	<div class="panel panel-default bigbox">
	<div class="panel-heading center">
	<%= image_tag @pin.image.url(:medium) %>
	</div>
		<div class="panel-body">
		<h1 class="center">
		  
		  <%= @pin.description %>
		</h1>
		<p class="center">Pinned by <%= @pin.user.name if @pin.user %></p>
		<p><%= @pin.long_description %></p>
	</div>
	<div class="panel-body">
		<% if user_signed_in? %>
			<div class="form-group">
			<%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit'), edit_pin_path(@pin) %> 
			</div>
		<% end %>
	</div>
	</div>


</div>
<div class="col-md-6">

	<div class="panel panel-default  panel-body">

	<h3 class="center">Thoughts? Enter your comments below</h3>

	<% if user_signed_in? %>
		<%= render 'comments/form' %>
	<% else %>
		<p class="center">Please <%= link_to "Login", new_user_session_path %> to Comment below</p>
	<% end %>

		<h5 class="center"> 
			This idea has <%= @pin.comments.count %> Comment(s)
		</h5>

			<%= render @pin.comments %>

	</div>

</div>   
</div>

