<div class="panel-body"> 
<%= form_for @pin , html: { multipart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <p>Idea Detailed Description</p><br>
    <%= f.text_field :long_description, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit Pin", class: "btn btn-primary"  %>
  </div>
<% end %>
</div>